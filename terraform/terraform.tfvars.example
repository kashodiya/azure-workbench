
# Copy this file to terraform.tfvars and fill in your actual values
# DO NOT commit terraform.tfvars to version control

# Project configuration
project_name = "azure-workbench"

# Azure Subscription ID
subscription_id = "your-subscription-id-here"

# Azure Service Principal credentials
client_id     = "your-client-id-here"
client_secret = "your-client-secret-here"
tenant_id     = "your-tenant-id-here"

# Azure OpenAI API key
azure_api_key = "your-azure-openai-api-key-here"

# Resource configuration
resource_group_name = "azure-workbench-rg"
vm_name            = "vm"
vm_size            = "Standard_B2s"
admin_username     = "azureuser"
master_password    = "your-secure-password-here"
admin_password     = "your-caddy-admin-password-here"

# Tags
tags = {
  Environment = "Development"
  Project     = "Azure Workbench"
  ManagedBy   = "Terraform"
}

